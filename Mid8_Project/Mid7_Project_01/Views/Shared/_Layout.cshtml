<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 70px;
        }

        img {
            width: 100%;
            max-height: 632px;
            object-fit: fill;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <section>
        <navbar class="navbar navbar-expand-md bg-danger-subtle fixed-top shadow-sm px-3 " style="border-bottom-color:darkgray">
            <div class="container-fluid">
                <span class="navbar-brand" >MVC <sub> Project</sub></span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nv" aria-controls="nv" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse" id="nv">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "navbar-brand" })
                        </li>
                        <li>
                            @Html.ActionLink("Teams", "Index", "Teams", new { }, new { @class = "navbar-brand" })

                        </li>
                        @if (Request.IsAuthenticated)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "navbar-brand" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "navbar-brand" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "navbar-brand" })
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </navbar>

    </section>
    <main>
        @RenderBody()
    </main>

    <footer class="container-fluid">
    </footer>
    @RenderSection("scripts", false)
</body>
</html>
